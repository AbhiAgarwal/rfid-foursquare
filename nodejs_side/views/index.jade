extends layout

block content
    script(src='/socket.io/socket.io.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    body(ng-app='todoApp')
      div.container(ng-controller='TodoCtrl', ng-init='init()')
        div.hero-unit
          h1
            a(onclick='refrFun()', href='#')  Foursquare Checkin Status
        input(id='currenttextbox' type='text', placeholder='Add a todo', ng-model='todos.new_todo.title' style='display:none;')
        button.btn(id='buttonclickthis' ng-click='todos.new_todo.save()' style='display:none;') Add
        div.well(id='refreshThis' style='max-width: 340px; padding: 8px 0;')
          ul.nav.nav-list
            li(ng-repeat='todo in todos.list')
              span(ng-bind='todo')
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.1/angular.min.js')
        script(src='/javascripts/socket.js')
